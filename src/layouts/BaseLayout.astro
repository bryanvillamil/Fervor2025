---
export interface Props {
  title?: string;
  logoSrc?: string;
}
const { title = 'Evento Especial', logoSrc = '/logo.png' } =
  Astro.props as Props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-brand-gradient text-white font-inter">
    <header
      class="w-full border-b border-white/10 backdrop-blur supports-[backdrop-filter]:bg-white/5"
    >
      <div
        class="container mx-auto px-4 py-4 flex items-center justify-between"
      >
        <a href="/" class="flex items-center gap-3">
          <img src={logoSrc} alt="Logo" class="h-10 w-auto" />
          <span class="font-bold text-xl tracking-tight">{title}</span>
        </a>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
